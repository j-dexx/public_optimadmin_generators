<h2>Link to page: <%= link_to @seo_entry.nominal_url, @seo_entry.nominal_url, :target => '_blank' %></h2>

<%= form_for([:admin, @seo_entry]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    
    <div class="field">
      <%= f.label :meta_description %><br />
      <%= f.text_area :meta_description %>
    </div>

    <div class="field">
      <%= f.label :in_sitemap %><br />
      <%= f.check_box :in_sitemap %>
    </div>
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>