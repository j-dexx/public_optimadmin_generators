<p>Link to page: <%= link_to @seo_entry.nominal_url, @seo_entry.nominal_url, target: '_blank' %></p>

<%= form_for(seo_entry) do |f| %>
<% if seo_entry.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(seo_entry.errors.count, "error") %> prohibited this seo entry from being saved:</h2>

    <ul>
      <% seo_entry.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <% if attributes.map(&:name).include?('title') %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <% end %>

  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :meta_description %><br />
        <%= f.text_area :meta_description %>
      </div>
    <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>
      <div class="field">
        <%= f.label :in_sitemap %><br />
        <%= f.check_box :in_sitemap %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
